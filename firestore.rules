rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function groupExists(groupId) {
      return exists(/databases/$(database)/documents/groups/$(groupId));
    }
    function isGroupMember(groupId) {
      return request.auth != null && groupExists(groupId)
        && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /groups/{groupId} {
      allow read: if request.auth != null
        && (request.auth.uid in resource.data.members
            || request.auth.token.phone_number in resource.data.pendingPhones);
      allow update: if request.auth != null
        && (request.auth.uid in resource.data.members
            || request.auth.token.phone_number in resource.data.pendingPhones);
      allow delete: if request.auth != null
        && request.auth.uid == resource.data.creatorId;
      allow create: if request.auth != null;
    }

    match /groups/{groupId}/expenses/{expenseId} {
      allow read, delete: if isGroupMember(groupId);
      allow create, update: if isGroupMember(groupId);
    }

    match /groups/{groupId}/settled_cycles/{cycleId} {
      allow read, create: if isGroupMember(groupId);
      allow update, delete: if false;
    }

    match /groups/{groupId}/settled_cycles/{cycleId}/expenses/{expenseId} {
      allow read, create: if isGroupMember(groupId);
      allow update, delete: if false;
    }

    match /groups/{groupId}/system_messages/{messageId} {
      allow read, write: if isGroupMember(groupId);
    }

    match /groups/{groupId}/expense_revisions/{revisionId} {
      allow read, write: if isGroupMember(groupId);
    }

    match /groups/{groupId}/deleted_expenses/{expenseId} {
      allow read, write: if isGroupMember(groupId);
    }

    match /groups/{groupId}/payment_attempts/{attemptId} {
      allow read, write: if isGroupMember(groupId);
    }

    match /groups/{groupId}/settlement_events/{eventId} {
      allow read, write: if isGroupMember(groupId);
    }
  }
}
